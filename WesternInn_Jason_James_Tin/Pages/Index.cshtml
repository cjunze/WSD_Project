@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div id="myCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="2000">

    <!-- Indicators -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="3"></button>
        <button type="button" data-bs-target="#myCarousel" data-bs-slide-to="4"></button>
    </div>

    <!-- The slideshow -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            @* Each img tag should be styled by the 'd-block' class and the 'w-100' class.
            'd-block' displays the image in block mode.
            'w-100' means 100% width, making the image span the entire width of the container.
            *@
            <img src="~/image/manes_bridge.jpg" class="d-block w-100" alt="Manes Bridge" />
            <div class="carousel-caption">
                <h3>
                    Manes Bridge
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/franciscan_church.jpg" class="d-block w-100" alt="Franciscan Church" />
            <div class="carousel-caption">
                <h3>
                    Franciscan Church
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/shengjin_coastal_city.jpg" class="d-block w-100" alt="Shengjin Coastal City" />
            <div class="carousel-caption">
                <h3>
                    Shengjin Coastal City
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/modern_skyscrapers.jpg" class="d-block w-100" alt="Modern Skyscrapers" />
            <div class="carousel-caption">
                <h3>
                    Modern Skyscrapers
                </h3>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/image/sheds_near_village.jpg" class="d-block w-100" alt="Sheds near village" />
            <div class="carousel-caption">
                <h3>
                    Sheds near village
                </h3>
            </div>
        </div>
    </div>

    <!-- Left and right controls -->
    <button type="button" class="carousel-control-prev" data-bs-target="#myCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button type="button" class="carousel-control-next" data-bs-target="#myCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

<br />

<div class="row">
    <div class="col-md-7">
        <h3>Welcome to Western Inn</h3>
        <p>
            This is a place where you can search and book rooms from our lovely hotel. 
        </p>
    </div>
    <div class="col-md-5">
        <h2 class="text-center">Useful Links</h2>
        <ul>
            <li><a href="https://www.westernsydney.edu.au/">Western Sydney University homepage</a></li>
            <li><a href="https://www.cityofparramatta.nsw.gov.au/">Parramatta City Council</a></li>
        </ul>
    </div>  
</div>
